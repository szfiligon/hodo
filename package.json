{
  "name": "hodo",
  "version": "1.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "electron": "electron .",
    "electron-dev": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "pack:asar": "npm run build && electron-builder --dir",
    "pack:unpack": "npm run build && electron-builder --dir --config.asar=false",
    "rebuild": "powershell -ExecutionPolicy Bypass -File rebuild.ps1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@libsql/client": "^0.15.9",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@uiw/react-md-editor": "^4.0.7",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "moment": "^2.30.1",
    "next": "15.3.5",
    "node-cron": "^4.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadcn": "^2.8.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.hodo.app",
    "productName": "Hodo",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "files": [
      "electron/**/*",
      "public/**",
      "package.json",
      ".next/**",
      "server.js",
      "node_modules/**"
    ],
    "asarUnpack": [
      "server.js",
      ".next/**",
      "node_modules/**"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}